#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Trading Bot CLI - Main Entry Point

This script serves as the unified entry point for all trading bot operations.
It replaces the multiple script entry points with a consistent command-line interface.

Usage:
    ./tradingbot <command> [options]

Examples:
    ./tradingbot run --mode paper --strategy ForexTrendFollowingStrategy
    ./tradingbot data --action quality-check --symbols EURUSD,GBPUSD
    ./tradingbot strategy --action list
    ./tradingbot dashboard
"""

import sys
import os

# Add the project root to the Python path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

from trading_bot.cli import main

if __name__ == '__main__':
    # Execute the CLI application
    sys.exit(main())
