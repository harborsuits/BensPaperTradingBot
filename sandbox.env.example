# Tradier API Configuration (Paper Trading)
# Get your API token from: https://developer.tradier.com/
TRADIER_TOKEN=your_tradier_api_token_here
TRADIER_API_KEY=your_tradier_api_token_here
TRADIER_BASE_URL=https://sandbox.tradier.com/v1
TRADIER_ACCOUNT_ID=paper

# Alternative environment variable names (also supported)
# TRADIER_API_URL=https://sandbox.tradier.com/v1

# Quotes Provider Configuration
QUOTES_PROVIDER=tradier

# Auto-refresh settings
AUTOREFRESH_ENABLED=1

# Risk Management Configuration
DD_MIN_MULT=1.0
DD_FLOOR=0.05

# Rate Limiting
RATE_LIMIT_QPS=10

# Python Paper Trading Service (if using)
PY_PAPER_BASE=http://localhost:8008

# WebSocket Configuration
WS_PORT=4000
FRONTEND_URL=http://localhost:3003
